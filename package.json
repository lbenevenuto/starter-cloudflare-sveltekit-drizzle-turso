{
	"name": "starter-cloudflare-drizzle-lucia-turso",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "ENVIRONMENT=pages vite build",
		"preview": "ENVIRONMENT=pages vite preview",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"drizzle-check": "drizzle-kit check:sqlite",
		"drizzle-generate": "drizzle-kit generate:sqlite",
		"drizzle-push": "drizzle-kit push:sqlite",
		"migrate": "tsm ./src/lib/server/database/migrate.ts",
		"pages:dev": "ENVIRONMENT=pages wrangler pages dev .svelte-kit/cloudflare --log-level debug --port 5173",
		"pages:deploy": "ENVIRONMENT=pages NODE_VERSION=18 pnpm run build && wrangler pages publish .svelte-kit/cloudflare",
		"pages:local": "ENVIRONMENT=pages NODE_VERSION=18 wrangler pages dev .svelte-kit/cloudflare/"
	},
	"devDependencies": {
		"@aws-sdk/client-ses": "^3.418.0",
		"@playwright/test": "^1.38.1",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-cloudflare": "^2.3.3",
		"@sveltejs/kit": "^1.25.0",
		"@tailwindcss/forms": "^0.5.6",
		"@tailwindcss/typography": "^0.5.10",
		"@typescript-eslint/eslint-plugin": "^6.7.2",
		"@typescript-eslint/parser": "^6.7.2",
		"autoprefixer": "^10.4.16",
		"daisyui": "^3.7.7",
		"dotenv": "^16.3.1",
		"drizzle-kit": "^0.19.13",
		"eslint": "^8.50.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.33.2",
		"postcss": "^8.4.30",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"redis": "^4.6.10",
		"svelte": "^4.2.1",
		"svelte-check": "^3.5.2",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"tsm": "^2.3.0",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "^0.34.5"
	},
	"type": "module",
	"dependencies": {
		"@libsql/client": "0.3.4",
		"@lucia-auth/adapter-session-unstorage": "^2.1.0",
		"@lucia-auth/adapter-sqlite": "^2.0.0",
		"@lucia-auth/oauth": "^3.3.0",
		"drizzle-orm": "0.28.5-a613c36",
		"lucia": "^2.7.0",
		"unstorage": "^1.9.0"
	}
}
